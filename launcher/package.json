{
  "name": "ai-combinator-launcher",
  "version": "0.1.1",
  "description": "Launcher for Factorio AI Combinator mod",
  "main": "dist/electron/app.js",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run dev:electron\" \"cd electron && tsc -w\"",
    "package": "npm run build:renderer && npm run build:electron && electron-builder",
    "build:electron": "cd electron && tsc",
    "build:renderer": "cd renderer && npm run build",
    "dev:renderer": "cd renderer && npm run dev",
    "dev:electron": "npm run build:electron && electron .",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit -p electron/tsconfig.json && cd renderer && npm run check"
  },
  "build": {
    "appId": "com.factorio.aicombinator",
    "productName": "AI Combinator Launcher",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json",
      "!node_modules/**/*.md",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/CHANGELOG*",
      "!node_modules/**/README*",
      "!node_modules/**/docs/**",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/example/**",
      "!node_modules/**/examples/**"
    ],
    "electronLanguages": [
      "en",
      "en-US"
    ],
    "compression": "maximum",
    "publish": {
      "provider": "github",
      "owner": "galgtonold",
      "repo": "ai_combinator"
    },
    "squirrelWindows": {
      "iconUrl": "https://raw.githubusercontent.com/galgtonold/ai_combinator/main/launcher/assets/icon.ico"
    },
    "win": {
      "target": {
        "target": "squirrel",
        "arch": [
          "x64"
        ]
      },
      "icon": "assets/icon.ico",
      "publisherName": "AI Combinator"
    },
    "mac": {
      "target": "zip",
      "icon": "assets/icon.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galgtonold/ai_combinator.git"
  },
  "keywords": [
    "factorio",
    "ai",
    "combinator",
    "launcher"
  ],
  "author": "galgtonold",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/galgtonold/ai_combinator/issues"
  },
  "homepage": "https://github.com/galgtonold/ai_combinator#readme",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@tsconfig/svelte": "^5.0.4",
    "concurrently": "^8.2.2",
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1",
    "eslint": "^9.28.0",
    "eslint-plugin-svelte": "^3.9.0",
    "globals": "^16.2.0",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.1",
    "svelte": "^5.0.0",
    "svelte-eslint-parser": "^1.1.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.5",
    "@ai-sdk/deepseek": "^1.0.10",
    "@ai-sdk/google": "^2.0.7",
    "@ai-sdk/openai": "^2.0.15",
    "@ai-sdk/xai": "^2.0.10",
    "@standard-schema/spec": "^1.0.0",
    "ai": "^5.0.15",
    "dgram": "^1.0.1",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-squirrel-startup": "^1.0.1",
    "update-electron-app": "^3.1.1",
    "zod": "^3.25.76"
  }
}
